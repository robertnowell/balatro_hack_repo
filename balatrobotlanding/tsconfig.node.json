{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "ESNext",
    "lib": ["ESNext"],
    "types": ["node"],
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "vite.config.ts",
    "tauri.conf.json",
    "scripts",
    "vitest.config.ts"
  ],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
